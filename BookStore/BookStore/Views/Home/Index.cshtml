@{ 
    ViewData["Title"] = "Home";
}
@inject BookStore.Repository.IBookRepository _bookRepository
<section class="jumbotron text-center">
    <div class="container">
        <h1>Welcome to Bookstore</h1>
        <p class="lead text-muted">
            Lorem ipsum dolor sit, amet consectetur adipisicing elit. Officiis placeat nesciunt
            cumque autem ipsum aperiam corrupti deleniti aliquam similique, quas id
            facere earum ipsam perferendis libero consectetur ab illo tempora!
        </p>
        <p>
            <a href="#" class="btn btn-primary my-2">Search books</a>
        </p>

        @foreach (var item in await _bookRepository.GetAllBooks())
        {
            <h3>@item.Title</h3>
        }

    </div>
</section>

<div class="py-5 bg-light">
    <div class="container">
        @*<h3 class="h3">Top books</h3>*@
        <big>Top books</big>
        <p big>Top books using attributes</p>

        @*@await Component.InvokeAsync("TopBooks", new {count = 3});*@
        <vc:top-books count="3"></vc:top-books>

        
    </div>
</div>

